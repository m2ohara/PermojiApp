<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/user_profile_layout">

    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="10dp"
        app:cardCornerRadius="6dp"
        android:layout_marginLeft="30dp">

        <LinearLayout
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/user_trait_layout">
            <TextView
                android:id="@+id/list_item_heading"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:textAlignment="center"
                android:textSize="22sp"
                android:textColor="@color/user_profile_layout"
                android:layout_gravity="top|center"/>
            <TextView
                android:id="@+id/list_item_content"
                android:layout_width="280dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textColor="@color/user_profile_layout"
                android:padding="15dp"/>

            <ImageButton
                android:id="@+id/list_item_button"
                android:layout_width="70dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:background="@color/user_profile_layout" />
        </LinearLayout>
        <ImageView
            android:id="@+id/list_item_notifier_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="50dp"
            android:layout_alignParentRight="true"/>
    </android.support.v7.widget.CardView>
</RelativeLayout>